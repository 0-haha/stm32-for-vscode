{
	"name": "stm32-for-vscode",
	"displayName": "STM32 for VSCode",
	"description": "An extension for: setting up, compiling, uploading and debugging STM32 applications",
	"version": "0.3.0",
	"engines": {
		"vscode": "^1.30.0"
	},
	"icon": "icon.png",
	"keywords": [
		"STM32",
		"stm",
		"Nucleo",
		"CubeMX"
	],
	"publisher": "bmd",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.buildSTM",
	],
	"main": "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.buildSTM",
				"title": "Build STM"
			}
		]
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test",
		"vscode:prepublish": "webpack --mode production",
		"compile": "webpack --mode none",
		"watch": "webpack --mode none --watch"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^8.10.25",
		"ts-loader": "^5.3.3",
		"tslint": "^5.8.0",
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"webpack": "^4.29.6",
		"webpack-cli": "^3.2.3"
	},
	"dependencies": {
		"json5": "^2.1.0",
		"lodash": "^4.17.11",
		"node-c-parser": "^1.0.11",
		"shelljs": "^0.8.3"
	}
}
