convert_to_file_type = $(sort $(addsuffix .$(2),$(basename $(1))))
is_out_of_parent_file = $(if $(findstring ../,$(1)),$(1),)
filter_out_of_parent_files = $(foreach file,$(1),$(call is_out_of_parent_file,$(file)))

is_in_parent_file = $(if $(findstring ../,$(1)),,$(1))
filter_in_parent_files = $(foreach file,$(1),$(call is_in_parent_file,$(file)))

convert_in_parent_sources_to_objects = $(call add_release_directory,$(call convert_to_file_type,$(call filter_in_parent_files, $(1)),o))
add_release_directory_to_out_of_parent_files = $(call prefix_directory,$(call remove_prefix_parent_dir,$(1)),$(RELEASE_DIRECTORY)/external/)

