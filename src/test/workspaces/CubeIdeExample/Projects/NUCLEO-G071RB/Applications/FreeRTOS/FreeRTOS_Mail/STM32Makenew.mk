	$(AS) -c $(ASM_FLAGS) $< -o $@

# ELF Firmware
$(RELEASE_DIRECTORY)/$(TARGET).elf: $(OBJECTS) $(MAKEFILE_NAME) | $(BUILD_TREE)
	$(CC) $(OBJECTS) $(LINKER_FLAGS) -o $@
	$(SZ) $@


$(FINAL_TARGET_NAME).hex: $(FINAL_TARGET_NAME).elf | $(BUILD_TREE)
	$(HEX) $< $@
  
$(FINAL_TARGET_NAME).bin: $(FINAL_TARGET_NAME).elf | $(BUILD_TREE)
	$(BIN) $< $@	
  
